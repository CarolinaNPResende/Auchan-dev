<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="navigationMenu">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>UICOM Sidebar</masterLabel>
    <description>Custom Navigation Menu Sidebar</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
                name="menuName"
                type="String"
                datasource="apex://ARCD_UICOM_NavigationLinkSetPickList"
                label="Navigation Menu Name"
                description="The name of the Navigation Menu Linkset, which can be configured in Settings > Navigation"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>